<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardBackgroundColor="#FFFF"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="8dp"
    android:id="@+id/cardViewCartItem2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cLViewCartItem2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cartItemImage2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/cartItemNameTxtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cartItemImage2"
            app:layout_constraintTop_toTopOf="@+id/cartItemImage2"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Chicken"/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            app:finalNumber="5"
            android:id="@+id/number_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            app:backGroundColor="@color/darkBlue"
            app:layout_constraintBottom_toTopOf="@+id/cartItemPriceTxtView2"
            app:layout_constraintStart_toEndOf="@id/cartItemImage2"
            app:layout_constraintTop_toBottomOf="@id/cartItemNameTxtView2"
            app:textSize="8sp" />

        <TextView
            android:id="@+id/cartItemPriceTxtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cartItemImage2"
            app:layout_constraintBottom_toBottomOf="@id/cartItemImage2"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="â‚¬4.50"/>

        <ImageView
            android:id="@+id/deleteCartItemButton2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_delete_cart_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>